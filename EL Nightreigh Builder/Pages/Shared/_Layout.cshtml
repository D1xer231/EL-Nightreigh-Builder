<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ER Nightreigh Builder</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EL_Nightreigh_Builder.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>

<body>
    <header class="main-header">
        <div class="header-container">
            <div class="logo-block">
                <img src="~/img/ico100.png" alt="ER Nightreigh Builder" class="logo-img"/>
                <span class="logo-text">ER Nightreigh<br />Builder</span>
            </div>

            <input type="checkbox" id="menu-toggle" />
            <label for="menu-toggle" class="menu-icon">
                <i class="fas fa-bars"></i>
            </label>

            <ul class="nav-menu">
                <li><a asp-area="" asp-page="/Index">Home</a></li>
                <li><a asp-area="" asp-page="/Builds">Builds</a></li>
                <li><a asp-area="" asp-page="/Runes">Runes</a></li>
                <li><a asp-area="" asp-page="/Weapons">Weapons</a></li>
            </ul>
        </div>
    </header>

    <div class="main-body container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer text-muted text-center">
        <div class="footer-content">
            <p>&copy; 2025 - ER Nightreigh Builder</p>
            <div class="footer-links">
                <a asp-area="" asp-page="/Weapons">Weapons</a>
                <a asp-area="" asp-page="/Runes">Runes</a>
                <a asp-area="" asp-page="/Builds">Builds</a>
                <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>